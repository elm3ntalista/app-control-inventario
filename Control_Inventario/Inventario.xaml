<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Control_Inventario.Inventario"
             Title="Inventario"
             BackgroundColor="#F5F5F5">
    <ContentPage.Content>
        <StackLayout Padding="10">

            <!-- Título -->
            <Label Text="Productos en Stock"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333"
                   Margin="0,0,0,10" />

            <!-- Lista de productos -->
            <ListView x:Name="listaProductos"
                      HasUnevenRows="True"
                      SeparatorColor="#ccc"
                      BackgroundColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label Text="{Binding Nombre}" FontSize="18" TextColor="#000"/>
                                <Label Text="{Binding Categoria}" FontSize="14" TextColor="#666"/>
                                <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}" FontSize="14" TextColor="#444"/>
                                <Label Text="{Binding Precio, StringFormat='Precio: ${0:F2}'}" FontSize="14" TextColor="#444"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="Agregar Producto"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="45"
                    Margin="0,10,0,0"
                    Clicked="OnAgregarProductoClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>