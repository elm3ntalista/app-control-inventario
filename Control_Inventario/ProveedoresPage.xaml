<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Control_Inventario.ProveedoresPage"
             Title="Proveedores">

    <StackLayout Padding="10" Spacing="10">
        <Label Text="Lista de Proveedores"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <CollectionView x:Name="ProveedoresCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           Margin="0,0,0,10"
                           BackgroundColor="White"
                           CornerRadius="8"
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="{Binding NombreProveedor}"
                                   FontSize="Medium"
                                   FontAttributes="Bold"
                                   TextColor="Black" />
                            <Label Text="{Binding TotalProductos, StringFormat='Productos: {0}'}"
                                   FontSize="Small"
                                   TextColor="Gray" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
