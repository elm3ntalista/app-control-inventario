<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Control_Inventario.RegistroProductoPage"
             Title="Registrar / Editar Producto">
    <ScrollView>
        <StackLayout Padding="12" Spacing="10">
            <Entry x:Name="NombreEntry" Placeholder="Nombre" />
            <Entry x:Name="CantidadEntry" Placeholder="Cantidad" Keyboard="Numeric" />
            <Entry x:Name="ProveedorEntry" Placeholder="Proveedor" />
            <Editor x:Name="DescripcionEntry" Placeholder="Descripción" AutoSize="TextChanges" HeightRequest="80"/>
            <Entry x:Name="PrecioEntry" Placeholder="Precio unitario" Keyboard="Numeric"/>
            <Entry x:Name="CategoriaEntry" Placeholder="Categoría" />
            <DatePicker x:Name="FechaIngresoPicker" />
            <Entry x:Name="UbicacionEntry" Placeholder="Ubicación en almacén" />
            <Entry x:Name="StockMinimoEntry" Placeholder="Stock mínimo" Keyboard="Numeric" />

            <Button Text="Guardar" BackgroundColor="#2E8B57" TextColor="White" Clicked="OnGuardarProducto" />
        </StackLayout>
    </ScrollView>
</ContentPage>
